{
  "name": "@subscrio/core",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/subscrio/subscrio-lib.git"
  },
  "homepage": "https://github.com/subscrio/subscrio-lib#readme",
  "bugs": {
    "url": "https://github.com/subscrio/subscrio-lib/issues"
  },
  "keywords": [
    "subscription",
    "entitlement",
    "feature-flags",
    "billing",
    "saas",
    "typescript"
  ],
  
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "require": "./dist/config/index.cjs",
      "types": "./dist/config/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "vite build",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:debug": "cross-env KEEP_TEST_DB=true vitest run",
    "typecheck": "tsc --noEmit",
    "db:rebuild": "tsx scripts/rebuild-dev-db.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.44.6",
    "pg": "^8.11.0",
    "stripe": "^14.0.0",
    "uuidv7": "^0.6.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "prettier": "^3.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.0.0"
  }
}
